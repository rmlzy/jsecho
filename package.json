{
  "name": "jsecho",
  "version": "1.0.0",
  "publishAt": "2020.04.01",
  "description": "A Node.js Blogging Platform inspired from Typecho.",
  "author": "rmlzy <rmlzy@outlook.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nest start --watch",
    "prestart": "npm run build",
    "start": "pm2 start ecosystem.config.js --env production --name 'jsecho'",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "stop": "pm2 stop jsecho && pm2 delete jsecho",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.13",
    "@nestjs/config": "^0.6.3",
    "@nestjs/core": "^7.6.13",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/mapped-types": "*",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-fastify": "^7.6.15",
    "@nestjs/schedule": "^0.4.3",
    "@nestjs/swagger": "^4.8.0",
    "@nestjs/throttler": "^1.1.2",
    "@nestjs/typeorm": "^7.1.5",
    "cache-manager": "^3.4.1",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "csurf": "^1.11.0",
    "dayjs": "^1.10.4",
    "fastify": "^3.14.0",
    "fastify-static": "^4.0.1",
    "fastify-swagger": "^4.5.0",
    "helmet": "^4.4.1",
    "highlight.js": "^10.7.2",
    "html-minifier": "^4.0.0",
    "lodash": "^4.17.21",
    "markdown-it": "^12.0.4",
    "mysql2": "^2.2.5",
    "nestjs-redis": "^1.3.3",
    "node-phpass": "^1.0.5",
    "nunjucks": "^3.2.3",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "point-of-view": "^4.14.0",
    "redis": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.6",
    "typeorm": "^0.2.31",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.6",
    "@nestjs/schematics": "^7.2.7",
    "@nestjs/testing": "^7.6.13",
    "@types/cache-manager": "^3.4.0",
    "@types/cron": "^1.7.2",
    "@types/csurf": "^1.11.0",
    "@types/highlight.js": "^10.1.0",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.31",
    "@types/passport-jwt": "^3.0.5",
    "@types/passport-local": "^1.0.33",
    "@types/serve-favicon": "^2.5.2",
    "@types/supertest": "^2.0.10",
    "cross-env": "^7.0.3",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-loader": "^8.0.17",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
